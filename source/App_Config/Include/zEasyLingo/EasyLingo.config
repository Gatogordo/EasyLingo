<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <pipelines>

      <httpRequestBegin>
        <processor patch:after="*[@type='Sitecore.Pipelines.HttpRequest.LanguageResolver, Sitecore.Kernel']"
                   type="TheReference.DotNet.Sitecore.EasyLingo.LanguageResolver, TheReference.DotNet.Sitecore.EasyLingo" />
      </httpRequestBegin>

      <renderContentEditor>
        <processor patch:before="*[1]"
                   type="TheReference.DotNet.Sitecore.EasyLingo.LanguageVersionsSection, TheReference.DotNet.Sitecore.EasyLingo" />
      </renderContentEditor>

    </pipelines>

    <sitecore.experienceeditor.speak.requests>
      <request name="EasyLingo.LanguageBar.GetAllowedLanguageVersions" type="TheReference.DotNet.Sitecore.EasyLingo.Speak.GetAllowedLanguageVersions, TheReference.DotNet.Sitecore.EasyLingo" />
      <request name="EasyLingo.LanguageBar.GetDisallowedLanguageVersions" type="TheReference.DotNet.Sitecore.EasyLingo.Speak.GetDisallowedLanguageVersions, TheReference.DotNet.Sitecore.EasyLingo" />
    </sitecore.experienceeditor.speak.requests>
  </sitecore>
</configuration>